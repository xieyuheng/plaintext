#!/usr/bin/env bash

plaintext="./bin/plaintext.js"

function install {
    yarn install
}

function build {
    yarn run build
}

function watch {
    yarn run watch
}

function format {
    yarn run format
}

function build {
    echo "[build]" &&
        $plaintext dir src -o out/src &&
        $plaintext toc src -o out/src/toc &&
        $plaintext file out/src/toc -o out/src/toc.html --title "plaintext | src toc" &&
        $plaintext file README -o out/index.html --title "plaintext" &&
        $plaintext file AUTHORS -o out/AUTHORS.html --title "plaintext | AUTHORS" &&
        $plaintext file LICENSE -o out/LICENSE.html --title "plaintext | LICENSE" &&
        true
}

function serve {
    build &&
        echo "[serve]" &&
        npx http-server out &&
        true
}

function t {
    test_prog_ext node test.js
}

function test_prog_ext {
    prog=$1
    ext=$2

    for file in $(find . | grep "^\./lib/" | grep "\.${ext}$")
    do
        echo ""
        echo "[test] $file"
        if ! time $prog $file
        then
            exit 1
        fi
    done
}

function main {
    for TASK in $@
    do
        $TASK
    done
}

main $@
